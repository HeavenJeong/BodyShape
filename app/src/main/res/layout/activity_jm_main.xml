<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".JM_main"
    android:background="@drawable/bg_camera">

    <Button
        android:id="@+id/jm_btn_camera"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text=""
        android:background="@drawable/cmr1_1"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/jm_btn_overlap"
        android:layout_marginTop="55dp" />
    <Button
        android:id="@+id/jm_btn_overlap"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text=""
        android:background="@drawable/cmr1_2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/jm_btn_slide"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/jm_btn_slide"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text=""
        android:background="@drawable/cmr1_3"
        android:layout_alignTop="@+id/jm_btn_camera"
        android:layout_toEndOf="@+id/jm_btn_overlap" />

</RelativeLayout>
